<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation_container"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" tools:showIn="@layout/fragment_recipe_step_detail">

    <ImageButton
            android:id="@+id/navigate_back_button"
            android:src="@drawable/backwardarrow"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/navigation_container_height"
            android:layout_height="@dimen/navigation_container_height"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

    <ImageButton
            android:id="@+id/navigate_forward_button"
            android:src="@drawable/forwardarrow"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/navigation_container_height"
            android:layout_height="@dimen/navigation_container_height"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

</RelativeLayout>